@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center mb-5">Yeni Kategori Ekleme Sayfası</h1>

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı", new { @class = "form-label" })
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Açıklama", new { @class = "form-label" })
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", rows = 4 })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Durum", new { @class = "form-label" })
        @Html.DropDownListFor(
            x => x.CategoryStatus,
            new SelectList(new List<SelectListItem>
            {
                new SelectListItem { Text = "Aktif", Value = "True" },
                new SelectListItem { Text = "Pasif", Value = "False" }
            }, "Value", "Text"),
            new { @class = "form-control" }
        )
    </div>
    <br />
    <div class="form-group">
        <button class="btn btn-primary btn-lg">Kaydet</button>
    </div>
}
