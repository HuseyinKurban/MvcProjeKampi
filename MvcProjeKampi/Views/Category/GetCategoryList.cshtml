@model List<EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<h3>Mvc Kamp Tablo Örneği - Kategori</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Durum</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@(item.CategoryStatus ? "Aktif":"Pasif")</td>
            <td><button class="btn btn-success">Güncelle</button></td>

        </tr>
    }

</table>
<button class="btn btn-primary">Yeni Kategori</button>
